<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/TV_Users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:text="Seleccione Usuario"
        android:textSize="15sp"
        android:textColor="#1a1946"/>

    <Spinner
        android:id="@+id/SP_Users"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TV_Users"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/TV_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SP_Users"
        android:layout_marginTop="125dp"
        android:text="Contrase침a"
        android:textSize="15sp"
        android:textColor="#1a1946"/>

    <EditText
        android:id="@+id/ET_Password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TV_Password"
        android:layout_marginTop="154dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/TV_Confirm_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ET_Password"
        android:layout_marginTop="227dp"
        android:text="Confirmar Contrase침a"
        android:textSize="15sp"
        android:textColor="#1a1946"/>

     <EditText
        android:id="@+id/ET_Confirm_Password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TV_Confirm_Password"
        android:layout_below="@+id/TV_Confirm_Password"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPassword"/>

    <CheckedTextView
        android:id="@+id/CTV_Recordar_Usuario"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/ET_Confirm_Password"
        android:layout_below="@+id/ET_Confirm_Password"
        android:layout_marginTop="310dp"
        android:checked="true"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="left"
        android:text="No cerrar sesi칩n"
        android:textSize="15sp"
        android:textColor="#1a1946"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:layout_below="@id/CTV_Recordar_Usuario"
        android:gravity="center"
        android:text="Iniciar Sesi칩n"
        android:textColor="#1a1946"
        android:textSize="15sp" />


</RelativeLayout>