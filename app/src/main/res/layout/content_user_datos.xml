<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserDatos"
    tools:showIn="@layout/app_bar_user_datos">

    <ImageButton
        android:id="@+id/IB_Foto_View"
        android:layout_width="140dp"
        android:layout_height="158dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/TV_User_View"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="122dp" />

    <TextView
        android:id="@+id/TV_User_View"
        android:layout_width="142dp"
        android:layout_height="27dp"
        android:text="Usuario"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/BTN_Logout_View"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/bk_boton_plano"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="#1a1946"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/TV_User_View"
        tools:layout_editor_absoluteX="142dp" />

</android.support.constraint.ConstraintLayout>